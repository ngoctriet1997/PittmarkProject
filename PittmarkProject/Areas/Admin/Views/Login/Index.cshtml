@model PittmarkProject.Models.UserLogin
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap Login Form Template</title>
    <!-- CSS -->
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Roboto:400,100,300,500">
    <link href="~/Areas/Admin/Assets/DangNhap/assets/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Assets/DangNhap/assets/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Assets/DangNhap/assets/css/form-elements.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Assets/DangNhap/assets/css/style.css" rel="stylesheet" />
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Favicon and touch icons -->
    <link rel="shortcut icon" href="~/Areas/Admin/Assets/DangNhap/assets/ico/favicon.png" />
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="~/Areas/Admin/Assets/DangNhap/assets/ico/apple-touch-icon-144-precomposed.png" />
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="~/Areas/Admin/Assets/DangNhap/assets/ico/apple-touch-icon-114-precomposed.png" />
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="~/Areas/Admin/Assets/DangNhap/assets/ico/apple-touch-icon-72-precomposed.png" />
    <link rel="apple-touch-icon-precomposed" href="~/Areas/Admin/Assets/DangNhap/assets/ico/apple-touch-icon-57-precomposed.png" />
</head>
<body>
    <!-- Top content -->
    <div class="top-content">

        <div class="inner-bg">
            <div class="container">
                <div class="row">
                    <div class="col-sm-8 col-sm-offset-2 text">
                        <h1>Login <strong>Admin</strong></h1>
                        
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6 col-sm-offset-3 form-box">
                        <div class="form-top">
                            <div class="form-top-left">
                                <h3>Login to our site</h3>
                                <p>Enter your username and password to log on:</p>
                            </div>
                            <div class="form-top-right">
                                <i class="fa fa-lock"></i>
                            </div>
                        </div>
                        <div class="form-bottom">
                            
                            @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                            {
                                @Html.ValidationSummary("", new { style = "font-weight:bold;color:red" })
                                <div class="form-group">
                                    <label class="sr-only" for="form-username">Username</label>
                                    @Html.TextBoxFor(m => m.UserName,new { name = "form-username",style="font-weight:bold", placeholder = "Username..." , @class= "form-username form-control font-weight-bold", id="form-username" })
                                   
                                </div>
                                <div class="form-group">
                                    <label class="sr-only" for="form-password">Password</label>
                                    @Html.PasswordFor(m=>m.Password, new { name = "form-password", style = "font-weight:bold", placeholder = "Password...", @class= "form-password form-control font-weight-bold", id="form-password"})
                                 
                                </div>
                                <div class="checkbox">
                                    <label>
                                    @Html.CheckBoxFor(m=>m.SavePassWork)
                                  
                                    Remember me</label>
                                </div>
                                <button type="submit" class="btn">Sign in!</button>
                            }
                         
                        </div>
                    </div>
                </div>
              
            </div>
        </div>

    </div>

    <!-- Javascript -->
    <script src="~/Areas/Admin/Assets/DangNhap/assets/js/jquery-1.11.1.min.js"></script>
    <script src="~/Areas/Admin/Assets/DangNhap/assets/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Areas/Admin/Assets/DangNhap/assets/js/jquery.backstretch.min.js"></script>
    <script src="~/Areas/Admin/Assets/DangNhap/assets/js/scripts.js"></script>

    <!--[if lt IE 10]>
        <script src="assets/js/placeholder.js"></script>
    <![endif]-->
</body>
</html>